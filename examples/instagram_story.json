{
    "canvas": {
        "preset": "instagram_story"
    },
    "background": {
        "type": "color",
        "color": "#833ab4"
    },
    "margin": {
        "top": 120,
        "right": 80,
        "bottom": 120,
        "left": 80
    },
    "textboxes": [
        {
            "id": "content",
            "x": 0,
            "y": 0,
            "width": 1.0,
            "height": 0.8,
            "padding": 40,
            "style": {
                "fontSize": 42,
                "color": "#ffffff",
                "lineHeight": 1.4
            }
        },
        {
            "id": "footer",
            "x": 0,
            "y": 0.85,
            "width": 1.0,
            "height": 0.1,
            "padding": 10,
            "style": {
                "fontSize": 24,
                "color": "#fdf89a",
                "lineHeight": 1.2
            }
        }
    ]
}